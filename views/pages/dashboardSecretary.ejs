<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/common-stylesheet.css">
    <link rel="stylesheet" href="/table.css" type="text/css">
</head>
<script>
    function searchConsultations(event) {

        event.preventDefault();

        let searchText = document.getElementById("searchField").value.trim();
        let form = document.getElementById("form");

        if(searchText.length > 0) {
            form.action = "/consultation/getList/" + searchText;
            form.submit();
        } else {
            return false;
        }
    }
</script>
<body>
    <header  class="header--menu">
        <div class="main-title-container">
            <h1>HISTORIFY</h1>
            <a href='/superuser/logout'>
                <div class="logout--button">Cerrar sesión</div>
            </a>
        </div>
        
    </header>
    <main class="main">
        <div class="super-section-separator">

            <!--Consultas-->
            <div class="section-separator section-container">
                <div class="section-separator icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="90" height="90" fill="beige"
                        class="bi bi-card-checklist" viewBox="0 0 16 16">
                        <path
                            d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2z" />
                        <path
                            d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5m-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0M7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5m-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0" />
                    </svg>
                </div>
                <div class="section-separator title-container">
                    <h2>Citas</h2>
                </div>
                <div class="section-separator list-container">
                    <ul class="option-list">

                        <!--Crear-->
                        <div class="option-separator">
                            <a href="/consultation/create">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                    class="bi bi-person-plus" viewBox="0 0 16 16">
                                    <path
                                        d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
                                    <path fill-rule="evenodd"
                                        d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
                                </svg>
                            </a>
                        </div>

                        <!--Editar-->
                        <div class="option-separator">
                            <a href="/consultation/update">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                    class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path
                                        d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </a>    
                        </div>
                        
                    </ul>
                </div>
            </div>
        </div>
        <section class="table--container">
            <div class="search">
                <form action="" id="form" method="post" class="search">
                    <input type="text" id="searchField" name="doctorId" class="search--input" required>
                    <input type="submit">
                    <span class="icon"><object class="lupa" data="./assets/search.svg" width="17" height="17"></object></span>
                </form>
            </div>
            <div class="table">
                <div class="table--titles">
                    <div class="table--column-title"><span><strong>Cédula</strong></span></div>
                    <div class="table--column-title"><span><strong>Nombre</strong></span></div>
                    <div class="table--column-title"><span><strong>Apellido</strong></span></div>
                    <div class="table--column-title"><span><strong>Fecha</strong></span></div>
                    <div class="table--column-title"><span><strong>Hora</strong></span></div>
                    <div class="table--column-title"><span><strong>Estatus</strong></span></div>                                                
                </div>
                <% if(consultations.length !== 0) { for (consultation of consultations) {%>
                    <div class="table--row">
                        <div class='row--element'><span><%= consultation.patient_id%></span></div>
                        <div class='row--element'><span>Victor</span></div>
                        <div class="row--element"><span>Mejias</span></div>
                        <div class="row--element">
                            <span>
                                <%= (consultation.consultation_date.getFullYear() + "-"
                                + String(consultation.consultation_date.getMonth() + 1).padStart(2,'0') + "-"
                                + consultation.consultation_date.getDate().toString().padStart(2,'0')) %>
                            </span></div>   
                        <div class="row--element">
                            <span>
                                <%= String(consultation.consultation_date.getHours()).padStart(2, '0')+ ":"
                                + String(consultation.consultation_date.getMinutes()).padStart(2, '0') %>
                            </span></div>
                        <div class="row--element"><span><%= consultation.status %></span></div>
                    </div>
                <% } } %>
            </div>
        </section>
    </main>
</body>
</html>